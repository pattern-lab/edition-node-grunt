{{> molecules-primary-nav-anon }}
<main>
	<section class="panel header">
	  <p class="heading--subheader">Working Group</p>
	  <h1 class="heading--display">Quality of Life</h1>
	  <p class="heading--title">This is the working group dedicated to looking out for the general wellbeing of our citizens.</p>
	</section>
	<section class="panel activity-and-members">
		<section class="latest-activity">
			<h1 class="heading--title">Latest Activity</h1>
			{{# listItems.ten }}
			{{> atoms-activity-stream-list-item }}
			{{/ listItems.ten }}
		</section>
		<section class="members-list">
			<h1 class="heading--title">Members</h1>
			{{# listItems.nine }}
			{{> molecules-user-card }}
			{{/ listItems.nine }}
		</section>
	</section>
	<section class="panel ideas-and-proposals">
		<section class="list--proposal">
			<h1 class="heading--title">Proposals <span><a href="{{ link.templates-all-proposals-view }}">See All</a></span></h1>
			{{# listItems.four }}
			{{> molecules-proposal-card }}
			{{/ listItems.four }}
		</section>
		<section class="list--idea">
			<h1 class="heading--title">Ideas <span><a href="{{ link.templates-all-ideas-view }}">See All</a></span></h1>
				{{# listItems.seven }}
		    {{> molecules-idea-card }}
		    {{/ listItems.seven }}
		</section>
	</section>
	<section class="panel conversation-thread">
		<h1 class="heading--title">Conversations</h1>
		{{> molecules-single-conversation }}
	</section>

</main>
{{> organisms-footer }}
