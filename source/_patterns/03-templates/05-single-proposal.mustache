{{> molecules-navigation }}
<main class="app-main">
	<section class="panel intro">
	    <p class="heading--header">Proposal</p>
	    <h1 class="heading--title">{{ title.short }}</h1>
	    <p>{{ excerpt.short }}</p>
	    <p class="heading--subheader">In the <a href="{{ link.templates-working-group-dashboard }}">{{ group.name }}</a> working group</p>
	    {{> molecules-tags }}
	  <div class="action-bar">
	    {{> molecules-voting-module }}
	    <div class="action-button">
	      <input id="menu04" type="checkbox" name="menu" />
	      <svg width="4px" height="16px" viewBox="0 0 4 16" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
	          <title>more</title>
	          <defs></defs>
	          <g id="Icon/Light/More-Vert" transform="translate(-10.000000, -4.000000)" >
	              <g id="more">
	                  <path d="M12,8 C13.1,8 14,7.1 14,6 C14,4.9 13.1,4 12,4 C10.9,4 10,4.9 10,6 C10,7.1 10.9,8 12,8 L12,8 Z M12,10 C10.9,10 10,10.9 10,12 C10,13.1 10.9,14 12,14 C13.1,14 14,13.1 14,12 C14,10.9 13.1,10 12,10 L12,10 Z M12,16 C10.9,16 10,16.9 10,18 C10,19.1 10.9,20 12,20 C13.1,20 14,19.1 14,18 C14,16.9 13.1,16 12,16 L12,16 Z"></path>
	              </g>
	          </g>
	      </svg>
	      <ul class="action-menu">
	          <li><a href="#">Edit</a></li>
	          <li><a href="#">Exclude</a></li>
	          <li><a href="#">Archive</a></li>
	      </ul>
	    </div>
    </div>
	</section>
	<section class="panel">
		<div class="panel-heading">
			<h1 class="heading--header">Proposal Status</h1>
		</div>
		{{> molecules-idea-timeline }}
	</section>
	<section class="panel text-created-attachments-similar">
	  <section class="temp-array proposal-text">
			<div class="panel-heading">
		    <h1 class="heading--header">Proposal Text</h1>
			</div>
      <iframe name="embed_readwrite"
              src="http://etherpad.littlemacondo.com/p/example_pad?showControls=true&showChat=true&showLineNumbers=true&useMonospaceFont=false"
              width="100%"
              height=600></iframe>
	  </section>
	</section>
  <section class="panel tex-created-attachments-similar">
    <section class="temp-array created-attachments-similar">
        <div class="panel-heading">
            <h1 class="heading--header">Created by</h1>
        </div>
      {{# listItems.one }}
        {{> molecules-user-card }}
      {{/ listItems.one }}
        <div class="panel-heading">
            <h1 class="heading--header">Attachments</h1><p class="heading--small"><a href="#"><i class="fa fa-paperclip"></i>&nbsp;Add a new file</a></p>
        </div>
      {{> molecules-file-card }}
        <h1 class="heading--header">Similar Proposals</h1>
      {{# listItems.three }}
        {{> atoms-definition-list-item }}
      {{/ listItems.three }}
    </section>
  </section>
  <section class="panel">
		<div class="panel-heading">
			<h1 class="heading--header">Conversations</h1><p class="heading--small"><a href="#"><i class="fa fa-comments-o"></i>&nbsp;Start a new conversation</a></p>
		</div>
		{{> molecules-single-conversation }}
		{{> molecules-single-conversation }}
	</section>
	<div class="panel reply-field">
		<h1 class="heading--header">Start a Conversation</h1>
		{{> molecules-comment-form-user }}
	</div>
</main>
{{> organisms-footer }}
