{{> molecules-navigation }}
<main class="app-main">
	<section class="panel intro">
	  <p class="heading--header">Working Group</p>
	  <h1 class="heading--title">Quality of Life</h1>
	  <p>This is the working group dedicated to looking out for the general wellbeing of our citizens.</p>
	</section>
	<section class="panel activity-and-members">
		<section class="latest-activity">
			<div class="panel-heading">
				<h1 class="heading--header">Latest Activity</h1><p class="heading--small"><a href="{{ link.templates-all-proposals-view }}">See All</a></p>
			</div>
			{{# listItems.ten }}
			{{> atoms-activity-stream-list-item }}
			{{/ listItems.ten }}
		</section>
		<section>
			<div class="panel-heading">
				<h1 class="heading--header">Members</h1><p class="heading--small"><a href="{{ link.templates-all-proposals-view }}">See All</a> | <a href="#">Add New</a></p>
			</div>
			{{# listItems.nine }}
			{{> molecules-user-card }}
			{{/ listItems.nine }}
		</section>
	</section>
	<section class="panel ideas-and-proposals">
		<section class="list--proposal">
			<div class="panel-heading">
				<h1 class="heading--header">Proposals</h1><p class="heading--small"><a href="{{ link.templates-all-proposals-view }}">See All</a> | <a href="#">Add New</a></p>
			</div>
			{{# listItems.four }}
			{{> molecules-proposal-card }}
			{{/ listItems.four }}
		</section>
		<section class="list--idea">
			<div class="panel-heading">
				<h1 class="heading--header">Ideas</h1><p class="heading--small"><a href="{{ link.templates-all-proposals-view }}">See All</a> | <a href="#">Add New</a></p>
			</div>
			{{# listItems.seven }}
	    {{> molecules-idea-card }}
	    {{/ listItems.seven }}
		</section>
	</section>
	<section class="panel conversation-thread">
		<h1 class="heading--header">Conversations</h1><p class="heading--small"><a href="#">Start a conversation</a></p>
		{{> molecules-single-conversation }}
	</section>
	<div class="panel reply-field">
		<h1 class="heading--title">Start a Conversation</h1>
		{{> molecules-comment-form-user }}
	</div>
</main>
{{> organisms-footer }}
