<li class="panel conversation-container">
	<div class="comment-meta">
		<h2 class="comment-timestamp heading--subheader-small">Yesterday in <a href="#">Housing and Urban Development (HUD) Funds</a></h2>
		{{> atoms-avatar }}
		<h4 class="comment-name"><a href="#">{{ name.first }} {{ name.last }}</a></h4>
	</div>
	<div class="comment-voting">
		{{> molecules-voting-module }}
	</div>
	<div class="comment-text">
		<p>{{ description }}</p>
	</div>
	<div class="comment-reply-controls">
		<a class="heading--subheader reply-count">2 Replies</a>
		<a class="heading--subheader reply-count reply">Reply to this comment</a>
	</div>
	<ul class="threaded-comments">
		{{> molecules-single-comment }}
		{{> molecules-single-comment }}
		{{> molecules-single-comment }}
	</ul>
</li>
